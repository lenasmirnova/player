<UserControl x:Class="JWAudioVideoPlayer.Views.TimerProjectorV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JWAudioVideoPlayer.Views"
             mc:Ignorable="d" >
    <Grid Background="Black" VerticalAlignment="Center">
        <Viewbox  HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="UniformToFill" >
            <Label Content="{Binding CurrentTimeString}" Foreground="White" />
        </Viewbox>
    </Grid>
</UserControl>
